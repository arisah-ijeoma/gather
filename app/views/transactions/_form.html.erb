<%= simple_form_for([@account, @transaction],
  url: account_transactions_path(@account),
  html: { class: 'form-horizontal' }) do |f| %>

  <%= hidden_field_tag :account_id, @account.id %>

  <%= f.input :household_name do %>
    <%= @transaction.household_full_name %>
  <% end %>

  <%= f.input :incurred_on, as: :date_picker,
      input_html: {data: {date_options: {maxDate: Date.today}}} %>
  <%= f.input :code, as: :radio_buttons, collection: transaction_code_options %>
  <%= f.input :description %>
  <%= f.input :amount, input_html: {value: number_with_precision(f.object.abs_amount, precision: 2) } %>

  <div class="row">
    <div class="form-actions col-sm-8">
      <%= f.button :submit, "Enter Transaction", class: "pull-right btn btn-primary" %>
      <%= link_to("Cancel", accounts_path, class: "pull-right btn btn-default") %>
    </div>
  </div>

<% end %>
