<% (@title = yield(:title)) && @title.blank? && (raise "No page title given") %>
<!DOCTYPE html>
<html>
<head>
  <title>MESS: <%= strip_tags(@title) %></title>
  <%= render("layouts/head") %>

  <%= javascript_tag do %>
    $(function() { new Mess.Views.ApplicationView(); });
  <% end %>
</head>
<body>
  <div id="main-wrapper">

    <nav class="navbar navbar-default">
      <div class="container-fluid nav-wrapper">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
            data-target="#navbar-collapse" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to(image_tag("logo-white.png"), home_path, class: "navbar-brand") %>
        </div>

        <div class="collapse navbar-collapse" id="navbar-collapse">
          <ul class="nav navbar-nav main-links">
            <%= nav_links %>
          </ul>
          <ul class="nav navbar-nav navbar-right user-info">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                aria-expanded="false">
                  <%= icon_tag("user") << " " << current_user.name %> <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to(icon_tag("user") << " Profile", user_path(current_user)) %>
                </li>
                <li>
                  <%= link_to(icon_tag("money") << " Accounts",
                    accounts_household_path(current_user.household)) %>
                </li>
                <li>
                  <%= link_to(icon_tag("sign-out") << " Log out",
                    destroy_user_session_path, method: :delete) %>
                </li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div id="content" class="<%= controller.controller_name.dasherize %>
      action-<%= controller.action_name.dasherize %> clearfix">
      <%= inline_svg("logo-black.svg", id: "print-logo") %>

      <%= flash_messages %>

      <div class="top-buttons">
        <%= yield(:top_buttons) %>
      </div>

      <h1><%= @title %></h1>

      <%= yield %>
    </div>

    <div id="footer-pusher"></div>
  </div>
  <%= render("layouts/footer") %>

  <div id="glb-load-ind">
    <%= image_tag("glb-load-ind.gif") %>
    Loading
  </div>

  <%= render("layouts/error_modal") %>

</body>
</html>
