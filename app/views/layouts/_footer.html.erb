<footer id="main-footer" class="hidden-print row">
  <div class="col-sm-4">
    <%= footer_items.map { |i| nav_link(i) }.reduce(&sep(" &bull; ")) %>
  </div>
  <div class="col-sm-8">
    v<%= app_version %> &bull;
    <%= link_to("Privacy Policy", "/about/privacy-policy") %> &bull;
    A project of <%= link_to("Sassafras Tech Collective", "http://sassafras.coop") %> &bull;
    <%= link_to("Credits", "https://github.com/sassafrastech/gather/blob/master/credits.md") %>
    <% if current_user && current_community && policy(current_community).update? %>
      &bull; <%= link_to("Settings", admin_settings_path(type: "community"))  %>
    <% end %>

    <%# For test purposes only. Security risk otherwise. %>
    <% if Rails.env.test? %>
      <div id="url"><%= request.url %></div>
    <% end %>
  </div>
</footer>
