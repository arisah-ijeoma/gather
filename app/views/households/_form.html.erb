<%= simple_form_for(@household, html: { class: 'form-horizontal household-form' }) do |f| %>

  <%= f.input :name %>
  <%= f.input :community_id, collection: Community.by_name %>
  <%= f.input :unit_num %>

  <% if @household.from_grot? %>
    <%= f.input :old_id %>
    <%= f.input :old_name %>
  <% end %>

  <div class="row">
    <div class="form-actions col-sm-8">
      <%= f.button :submit, class: "pull-right btn-primary" %>
    </div>
  </div>

<% end %>
