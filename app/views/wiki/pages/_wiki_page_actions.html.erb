<ul class="wiki_page_actions">
  <%= content_tag("li", link_to("List pages", wiki_all_path)) %>
  <%= content_tag("li", link_to("History", wiki_page_history_path(@page))) if history_allowed? %>
  <%= content_tag("li", link_to("Edit", wiki_page_edit_path(@page))) if edit_allowed? %>
  <% if destroy_allowed? %>
    <%= content_tag("li", link_to("Destroy", wiki_page_path(@page), method: :delete,
          data: {confirm: "This action can't be undone. Are you sure?"})) %>
  <% end %>
</ul>
