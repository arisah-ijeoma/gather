<% if with_form %>
  <form action="<%=wiki_page_compare_path(@page)%>" method="get">
<% end %>

<table class="index versions">
  <tr>
    <td>Version</td>
    <td>Date</td>
    <td>Author</td>
    <td>Comment</td>
  </tr>
  <% versions.each do |v| %>
    <tr>
      <td>
        <%= v.number %>
        <% if with_form %>
          <input type="radio" name="old" value="<%=v.number%>" <%= 'checked="true" ' if v == versions[-1] %>/>
          <input type="radio" name="new" value="<%=v.number%>" <%= 'checked="true" ' if v == versions[-2] %>/>
        <% end %>
      </td>
      <td><%= l(v.updated_at, format: :full_datetime) %></td>
      <td><%= wiki_user(v.updator) %></td>
      <td><%= v.comment %></td>
    </tr>
  <% end %>
</table>

<% if with_form %>
    <%= submit_tag("Compare Selected", class: "btn btn-default") %>
  </form>
<% end %>
