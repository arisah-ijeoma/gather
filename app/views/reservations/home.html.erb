<% content_for(:title){ "Reservations" } %>

<% content_for(:top_buttons) do %>
  <%= lens_bar %>
  <%= calendar_exports_link %>
<% end %>

<% if @resources.empty? %>
  No reservable resources found.
<% else %>
  <% @resources.each do |resource| %>
    <div class="resource">
      <%= link_to(reservations_path(resource_id: resource.id)) do %>
        <%= image_tag(resource.photo.url(:thumb)) %>
        <%= resource.name %>
      <% end %>
    </div>
  <% end %>
<% end %>
