<% content_for(:title){ "Reservations" } %>

<% content_for(:top_buttons) do %>
  <%= filter_bar(:community, required: true) %>
<% end %>

<% if @resources.empty? %>
  No reservable resources found.
<% else %>
  <% @resources.each do |resource| %>
    <div class="resource">
      <%= link_to(reservations_path_for_resource(resource)) do %>
        <%= image_tag(resource.photo.url(:thumb)) %>
        <%= resource.name %>
      <% end %>
    </div>
  <% end %>
<% end %>
