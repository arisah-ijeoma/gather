<% content_for(:title){ "Accounts" } %>

<% content_for(:top_buttons) do %>
  <strong>
    <%= t(".summary", count: @active_accounts, amount: currency_with_cr(@grand_total_due)) %>
    <% unless @active_accounts == 0 %>
      &nbsp;
      <%= link_to(icon_tag("send") << " Generate Invoices", generate_invoices_path,
        method: :post, class: "btn btn-primary",
        data: { confirm: "Are you sure? Invoices will be sent out to #{@active_accounts} people."}) %>
    <% end %>
  </strong>
<% end %>

<% if @accounts.empty? %>
  <div class="none-found">
    No accounts found.
  </div>
<% else %>
  <table class="index">
    <tr>
      <th class="col-md-2">Household</th>
      <th class="col-md-1">Last Inv. Date</th>
      <th class="col-md-1">Due Last Inv.</th>
      <th class="col-md-1">Payments</th>
      <th class="col-md-1">Balance Due</th>
      <th class="col-md-1">New Charges</th>
      <th class="col-md-1">Current Balance</th>
    </tr>
    <% @accounts.each do |account| %>
      <tr>
        <td class="col-md-2">
          <%= link_to(account.household_full_name, accounts_household_path(account.household)) %>
        </td>
        <td class="col-md-1">
          <%= account.last_invoiced_on.try(:to_s, :short_date) || "N/A" %>
        </td>
        <td class="col-md-1">
          <%= invoice_amount(account.last_invoice) %>
        </td>
        <td class="col-md-1">
          <%= number_to_currency(account.total_new_credits) %>
        </td>
        <td class="col-md-1">
          <%= currency_with_cr(account.balance_due) %>
        </td>
        <td class="col-md-1">
          <%= number_to_currency(account.total_new_charges) %>
        </td>
        <td class="col-md-1">
          <strong><%= currency_with_cr(account.current_balance) %></strong>
        </td>
      </tr>
    <% end %>
  </table>

  <%= paginate @accounts, params: {controller: 'accounts'} %>
<% end %>