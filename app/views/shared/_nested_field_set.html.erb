<%# Renders a set of nested fields handled by cocoon. Assumes all model stuff is in place. %>
<%= f.input assoc, error: false do %>
  <div class="nested-field-set">
    <%= f.simple_fields_for assoc do |f2| %>
      <%= render("#{assoc.to_s.singularize}_fields", f: f2) %>
    <% end %>
    <span><%= link_to_add_association t("cocoon.add_links.#{assoc}"), f, assoc %></span>
  </div>
<% end %>
